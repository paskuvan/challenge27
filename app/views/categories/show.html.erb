<p id="notice"><%= notice %></p>


  <h4>Nombre:</h4>
  <%= @category.name %>

<%= form_with(model: [ @category, @product], local: true ) do |form| %>
<%= form.label :name, 'Ingresar nombre del producto:' %>
<%= form.text_field :name , class: 'form-group' %>

<%= form.label :price, 'Ingresar precio:' %>
<%= form.number_field :price %>

<%= form.submit 'Crear' , class: 'btn btn-success'%>
<% end %>



<table class="table">
  <tr>
    <th>Nombre </th>
    <th>Precio</th>
  </tr>

    <% @category.products.each do |product| %>
<% if product.id %>
    <tr>
      <td> <%= product.name %> </td>
      <td> <%= product.price %> </td>
      <td>
    <div class="btn btn-danger">
      <%= link_to 'X',  category_product_path(@category, product),  method: :delete  %>
    </div>
      </td>
      <td>
        <div class="btn btn-primary">
      <%= link_to 'Edit',  edit_category_product_path(@category, product) %>
    </div>
      </td>
    </tr>
    <% end %>
    <% end %>
 </table>

